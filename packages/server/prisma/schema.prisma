generator client {
  provider = "prisma-client"
  output   = "../src/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  public_id        String   @unique @default(uuid())
  username         String   @unique
  password         String
  email            String   @unique
  firstname        String
  lastname         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  totalAppLifetime Int      @default(0)

  projects Project[]
  tasks    Task[]
  sessions Session[]
}

model Project {
  id          String   @id @default(uuid())
  public_id   String   @unique @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    String
  description String
  owner_id    String
  owner       User     @relation(fields: [owner_id], references: [id])
  status      String   @default("pending")
  title       String
  tasks       Task[]
}

model Task {
  id          String    @id @default(uuid())
  public_id   String    @unique @default(uuid())
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  title       String
  description String
  owner_id    String
  owner       User      @relation(fields: [owner_id], references: [id])
  project_id  String
  project     Project   @relation(fields: [project_id], references: [id])
  status      String    @default("pending")
}

model Session {
  id                String @id @default(uuid())
  session_public_id String @unique @default(uuid())

  refreshTokenHashed    String   @unique
  searchToken           String   @unique
  refreshTokenExpiresAt DateTime

  isSessionProcessed Boolean   @default(false)
  updatedAt          DateTime  @updatedAt
  loggedAt           DateTime  @default(now())
  loggedOutAt        DateTime?
  lastActiveAt       DateTime  @default(now())
  logoutReason       String?

  owner_id String
  owner    User   @relation(fields: [owner_id], references: [id])

  totalSessionTime Int @default(0)
}
